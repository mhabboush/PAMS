<!DOCTYPE html>
<html>

<head>
	<title>Visitor</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/common.css">

</head>
<body>
	<nav class="navbar navbar-light bg-light">
		<div class="navbar-header  d-flex align-items-center">
			<a class="navbar-brand" href="/"><img src="/img/logo.png"></a>
			<h1 class="navbar-text">All Visits for <%=name%> </h1>
		</div>
	</nav>
    <div class="bg-dark d-flex align-items-center">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"><%=type=='visitor'?'Host':'Visitor'%> Name</th>
                    <th scope="col">Date</th>
                    <th scope="col">Time</th>
                    <th scope="col">Destination</th>
                    <th scope="col">Car Plate Number</th>
                    <th scope="col">Details</th>
                </tr>
            </thead>
            <% visits.forEach(function(visit){ %>
            <tr><td><%=type=='visitor'?visit.host:visit.visitor%></td><td><%=visit.date%></td><td><%=visit.time%></td><td><%=visit.destination%></td>
            <td><%=visit.plate%></td><td><button type="button" class="btn btn-danger" onclick="location.href='/visits/<%=visit._id%>';">Show more</button></td></tr>
            <%})%>
        </table>
        </div>              
</body>
