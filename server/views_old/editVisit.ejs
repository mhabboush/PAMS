<!DOCTYPE html>
<html>

<head>
    <title>editVisit</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/newVisit.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/dmuy/MDTimePicker/mdtimepicker.min.css">
    <script src="https://cdn.jsdelivr.net/gh/dmuy/MDTimePicker/mdtimepicker.min.js"></script>
    <script src="/js/editVisit.js"></script>

</head>

<body>
    <nav class="navbar navbar-light bg-light">
        <div class="navbar-header  d-flex align-items-center">
            <a class="navbar-brand" href="/"><img src="/img/logo.png"></a>
            <h1 class="navbar-text">Edit Visit</h1>
        </div>
    </nav>
    <form action="/visits/<%=visit._id%>?_method=PUT" method="POST">
        <label>
            <p class="label-txt">Host Name</p>
            <input value='<%=visit.host%>' name="host" type="text" class="input" <%=type=='resident'?'disabled ':''%>>
            <div class="line-box">
                <div class="line"></div>
            </div>
        </label>
        <label>
            <p class="label-txt">Visitor Name</p>
            <input value='<%=visit.visitor%>' name="visitor" type="text" <%=type=='visitor'?'disabled ':''%> class="input">
            <div class="line-box">
                <div class="line"></div>
            </div>
        </label>
        <label>
            <p class="label-txt">Destination</p>
            <input value='<%=visit.destination%>' name="destination" type="text" class="input">
            <div class="line-box">
                <div class="line"></div>
            </div>
        </label>
        <label>
            <p class="label-txt">Visit Date</p>
            <input value='<%=visit.date%>' type="text" name="date" class="input datepicker" onkeydown="return false">
            <div class="line-box">
                <div class="line"></div>
            </div>
        </label>
        <label>
            <p class="label-txt">Visit Time</p>
            <input value='<%=visit.time%>' type="text" name="time" class="input timepicker" onkeydown="return false">
            <div class="line-box">
                <div class="line"></div>
            </div>
        </label>
        <label>
            <p class="label-txt">Car maker</p>
            <input value='<%=visit.maker%>' name="maker" type="text" class="input">
            <div class="line-box">
                <div class="line"></div>
            </div>
        </label>
        <label>
            <p class="label-txt">Car model</p>
            <input value='<%=visit.model%>' name="model" type="text" class="input">
            <div class="line-box">
                <div class="line"></div>
            </div>
        </label>
        <label>
            <p class="label-txt">Model year</p>
            <input value='<%=visit.year%>' name="year" type="number" class="input">
            <div class="line-box">
                <div class="line"></div>
            </div>
        </label>
        <label>
            <p class="label-txt">Car plate number</p>
            <input value='<%=visit.plate%>' name="plate" type="text" class="input" maxlength="7">
            <div class="line-box">
                <div class="line"></div>
            </div>
        </label>
        <button type="submit">Submit</button>
    </form>
</body>