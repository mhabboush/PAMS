<!DOCTYPE html>

<html>
<head>
	<title>Security</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
		integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
	<link rel="stylesheet" type="text/css" href="/css/common.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
</head>

<body>
	<nav class="navbar navbar-light bg-light">
		<div class="navbar-header  d-flex align-items-center">
			<a class="navbar-brand" href="/"><img src="/img/logo.png"></a>
			<h1 class="navbar-text">Security System</h1>
		</div>
	</nav>
	<div class="column">
		<div class="row">
			<div class="col-2 bg-dark d-flex align-items-center">
				<h3 class="text-center mx-auto">Personnel Information</h3>
			</div>
			<div class="col-10 partition d-flex align-items-center">
				<img src="/img/ava.png" height="150">
				<div class="text">
					<h5><b> Hello, </b> <i> <%= name%> </i> </h5>
					<h5><b> Email: </b> <i> <%= email%> </i> </h5>
					<button type="button" class="btn btn-danger" onclick="location.href='/signout';">Sign out</button>

				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-2 bg-dark d-flex align-items-center">
				<h3 class="text-center mx-auto">Visitors Inside Campus</h3>
			</div>
			<div class="col-10 partition">
				<table class="table">
					<thead class="thead-dark">
						<tr>
							<th scope="col">Host Name</th>
							<th scope="col">Visitor Name</th>
							<th scope="col">Date</th>
							<th scope="col">Time</th>
							<th scope="col">Destination</th>
							<th scope="col">Car Model</th>
							<th scope="col">Car Plate Number</th>
							<th scope="col">Details</th>
						</tr>
					</thead>
					<% visits.filter(x => x.checkedout == "NO").forEach((visit) => { %>
						<tr><td><%=visit.host%></td><td><%=visit.visitor%></td><td><%=visit.date%></td><td><%=visit.time%></td><td><%=visit.destination%></td><td><%=visit.model%></td>
						<td><%=visit.plate%></td><td><button type="button" class="btn btn-danger" onclick="location.href='/visits/<%=visit._id%>';">Show more</button></td></tr>
					<%})%>			

				</table>
			</div>
		</div>
		<div class="row">
			<div class="col-2 bg-dark d-flex align-items-center">
				<h3 class="text-center mx-auto">Visitors Outside Campus</h3>
			</div>
			<div class="col-10 partition">
				<table class="table">
					<thead class="thead-dark">
						<tr>
							<th scope="col">Host Name</th>
							<th scope="col">Visitor Name</th>
							<th scope="col">Date</th>
							<th scope="col">Time</th>
							<th scope="col">Destination</th>
							<th scope="col">Car Model</th>
							<th scope="col">Car Plate Number</th>
							<th scope="col">Details</th>
						</tr>
					</thead>
					<% visits.filter(x => x.checkedout == "YES").forEach((visit) => { %>
						<tr><td><%=visit.host%></td><td><%=visit.visitor%></td><td><%=visit.date%></td><td><%=visit.time%></td><td><%=visit.destination%></td><td><%=visit.model%></td>
						<td><%=visit.plate%></td><td><button type="button" class="btn btn-danger" onclick="location.href='/visits/<%=visit._id%>';">Show more</button></td></tr>
					<%})%>			
				</table>
			</div>
		</div>
	</div>
</body>

</html>