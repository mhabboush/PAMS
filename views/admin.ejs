<!-- Header for the page -->
<%- include('./partials/head.ejs') %>
<div class="wrapper">
  <nav id="sidebar">
    <ul class="list-unstyled components">
      <% if (active == "clinics") { %>
      <li class="active">
        <a> <i class="fa fa-medkit" style="margin-right: 10px;"></i>Clinics</a>
      </li>
      <li>
        <a href="/announcements">
          <i class="fa fa-info-circle" style="margin-right: 10px;"></i
          >Announcements</a
        >
      </li>
      <% } if (active == "announcements") { %>
      <li>
        <a href="/clinics">
          <i class="fa fa-medkit" style="margin-right: 10px;"></i>Clinics</a
        >
      </li>
      <li class="active">
        <a>
          <i class="fa fa-info-circle" style="margin-right: 10px;"></i
          >Announcements</a
        >
      </li>
      <% } %>
    </ul>
  </nav>
  <div id="content">
    <div class="jumbotron">
      <div class="input-group mb-3">
        <input
          type="text"
          id="searchinp"
          class="form-control"
          aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default"
          placeholder="Search"
        />
        <% if (active == "clinics") { %>
        <a href="/clinics/new">
          <i
            class="fa fa-plus-square w3-xxlarge"
            style="margin-left: 20px;"
          ></i>
        </a>
        <% } if (active == "announcements") { %>
        <a href="#">
          <i
            class="fa fa-plus-square w3-xxlarge"
            style="margin-left: 20px;"
            data-toggle="modal"
            data-target="#newModal"
          ></i>
        </a>
        <% } %>
      </div>
      <table class="table table-striped">
        <thead class="thead-dark">
          <% if (active == "clinics") { %>
          <th scope="col">Name</th>
          <th scope="col">Services</th>
          <th scope="col">Location</th>
          <th scope="col">Delete</th>
          <% } if (active == "announcements") { %>
          <th scope="col">Submitter</th>
          <th scope="col">Content</th>
          <th scope="col">Date</th>
          <th scope="col">Delete</th>
          <% } %>
        </thead>
        <tbody>
          <% if (active == "clinics") { data.forEach(d => { %>
          <tr>
            <td>
              <!-- If the clinic is active -->
              <% if (d.status == "active") { %> <%= d.name %>
              <i class="fa fa-award" style="color: gold;"></i>
              <% } %>
              <!-- If the clinic is not active -->
              <% if (d.status == "inactive") { %>
              <div class="dropdown">
                <button
                  class="btn"
                  type="button"
                  id="dropdownMenuButton"
                  data-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false"
                >
                  <%= d.name %>
                  <i
                    class="fa fa-wrench w3-large"
                    style="padding-left: 10px;"
                  ></i>
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                  <a
                    class="dropdown-item"
                    href="/clinics/<%= d._id %>/manager/new"
                  >
                    Assign Clinic Manager
                  </a>
                </div>
              </div>
              <% } %>
            </td>
            <td><a href="/clinics/<%= d._id %>"> <%= d.services %> </a></td>
            <td><a href="/clinics/<%= d._id %>"> <%= d.location %> </a></td>
            <td>
              <form action="/clinics/<%= d._id %>?_method=DELETE" method="POST">
                <button
                  class="btn"
                  type="submit"
                  style="background: transparent;"
                >
                  <i class="fa fa-trash w3-xlarge"></i>
                </button>
              </form>
            </td>
          </tr>
          <% }) } if (active == "announcements") { data.forEach(d => { %>
          <tr>
            <td><a> <%= d.submitter %> </a></td>
            <td><a> <%= d.content %> </a></td>
            <td><a> <%= d.date %> </a></td>
            <td>
              <form
                action="/announcements/:<%= d._id %>?_method=DELETE"
                method="POST"
              >
                <button
                  type="submit"
                  class="btn btn-primary"
                  style="background: transparent; border: transparent;"
                >
                  <i class="fa fa-trash w3-xlarge" style="color: black;"></i>
                </button>
              </form>
            </td>
          </tr>
          <% }) } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- For Adding a new Assignment -->
<%- include('./partials/new_announcement.ejs') %>
<!-- Footer for the page -->
<%- include('./partials/foot.ejs') %>
