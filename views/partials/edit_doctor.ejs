<div
  class="modal fade"
  id="editdr"
  tabindex="-1"
  role="dialog"
  aria-labelledby="editdrLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form action="/doctors/<%= data._id %>/edit?_method=PUT" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="editdrLabel">
            Edit Doctor
          </h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="fname">
              <i class="fa fa-address-book-o w3-large"></i> First Name
            </label>
            <input
              name="fname"
              value="<%= data.fname %>"
              type="text"
              class="input"
            />
          </div>
          <div class="form-group">
            <label for="lname">
              <i class="fa fa-address-book-o w3-large"></i> Last Name
            </label>
            <input
              name="lname"
              value="<%= data.lname %>"
              type="text"
              class="input"
            />
          </div>
          <div class="form-group">
            <label for="profile">
              <i class="fa fa-lightbulb-o w3-large"></i> Profile
            </label>
            <input
              name="profile"
              value="<%= data.profile %>"
              type="text"
              class="input"
            />
          </div>
          <div class="form-group">
            <label for="speciality">
              <i class="fa fa-handshake-o w3-large"></i> Speciality
            </label>
            <input
              name="speciality"
              value="<%= data.speciality %>"
              type="text"
              class="input"
            />
          </div>
          <div class="form-group">
            <label for="office">
              <i class="fa fa-hospital-o w3-large"></i> Office
            </label>
            <input
              name="office"
              value="<%= data.office %>"
              type="text"
              class="input"
            />
          </div>
          <div class="form-group">
            <label for="experience">
              <i class="fa fa-certificate w3-large"></i> Experience
            </label>
            <input
              name="experience"
              value="<%= data.experience %>"
              type="number"
              class="input"
            />
          </div>
          <div class="form-group">
            <label for="email">
              <i class="fa fa-envelope w3-large"></i> Email
            </label>
            <input
              name="email"
              value="<%= data.email %>"
              type="email"
              class="input"
            />
          </div>
          <div class="form-group">
            <label for="numbers">
              <i class="fa fa-phone w3-large"></i> Phone number
            </label>
            <input
              value="<%= data.numbers %>"
              name="numbers"
              type="text"
              class="input"
              pattern="[0]{1}[5]{1}[0-9]{8}"
              ,
              title="Invalid number"
            />
          </div>
          <div class="form-group">
            <label for="status">
              <i class="fa fa-question-circle w3-large"></i> Status
            </label>
            <select class="form-control" id="status" name="status">
              <option value="active"> Active </option>
              <option value="inactive"> Inactive </option>
              <option value="busy"> Busy </option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-primary">
            Submit
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
