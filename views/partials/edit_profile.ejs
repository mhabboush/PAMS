<div
  class="modal fade"
  id="editProfile"
  tabindex="-1"
  role="dialog"
  aria-labelledby="editProfileLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form action="/users/profile?_method=PUT" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="editProfileLabel">
            Edit Profile
          </h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="fname">
              <i class="fa fa-address-book-o w3-large"></i> First Name
            </label>
            <input
              name="fname"
              value="<%= data.fname %>"
              type="text"
              class="input"
            />
          </div>
          <div class="form-group">
            <label for="lname">
              <i class="fa fa-address-book-o w3-large"></i> Last Name
            </label>
            <input
              name="lname"
              value="<%= data.lname %>"
              type="text"
              class="input"
            />
          </div>
          <div class="form-group">
            <label for="numbers">
              <i class="fa fa-phone w3-large"></i> Phone number
            </label>
            <input
              value="<%= data.numbers %>"
              name="numbers"
              type="text"
              class="input"
              pattern="[0]{1}[5]{1}[0-9]{8}"
              ,
              title="Invalid number"
            />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-primary">
            Submit
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
