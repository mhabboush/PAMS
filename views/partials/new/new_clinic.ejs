<div class="row">
  <div class="d-flex align-items-center col-6">
    <label>
      <p class="label-txt"><i class="fa fa-ambulance w3-large"></i> Name</p>
      <input
        name="name"
        type="text"
        class="input"
        required="required"
        pattern="^[A-Za-z]{1,15}"
        title="Please use only characters"
      />
      <div class="line-box">
        <div class="line"></div>
      </div>
      <div style="height: 15px;"></div>
    </label>
  </div>
  <div class="d-flex align-items-center col-6">
    <label>
      <p class="label-txt">
        <i class="fa fa-lightbulb-o w3-large"></i> Profile
      </p>
      <input
        name="profile"
        type="text"
        class="input"
        required="required"
        pattern="^[A-Za-z]{1,15}"
        title="Please use only characters"
      />
      <div class="line-box">
        <div class="line"></div>
      </div>
      <div style="height: 15px;"></div>
    </label>
  </div>
  <div class="row">
    <div class="d-flex align-items-center col-6">
      <label>
        <p class="label-txt"><i class="fa fa-tags w3-large"></i> Services</p>
        <input
          name="services"
          type="text"
          class="input"
          required="required"
          pattern="^[A-Za-z]{1,15}"
          title="Please use only characters"
        />
        <div class="line-box">
          <div class="line"></div>
        </div>
        <div style="height: 15px;"></div>
      </label>
    </div>
    <div class="d-flex align-items-center col-6">
      <label>
        <p class="label-txt">
          <i class="fa fa-map-marker w3-large"></i> Location
        </p>
        <input
          name="location"
          type="text"
          class="input"
          required="required"
          pattern="^[A-Za-z]{1,15}"
          title="Please use only characters"
        />
        <div class="line-box">
          <div class="line"></div>
        </div>
        <div style="height: 15px;"></div>
      </label>
    </div>
  </div>
  <label>
    <p class="label-txt"><i class="fa fa-globe w3-large"></i> Website</p>
    <input
      name="website"
      type="url"
      class="input"
      required="required"
      title="Please use only characters"
    />
    <div class="line-box">
      <div class="line"></div>
    </div>
    <div style="height: 15px;"></div>
  </label>
  <label>
    <p class="label-txt"><i class="fa fa-envelope w3-large"></i> Email</p>
    <input
      name="email"
      type="email"
      class="input"
      required="required"
      pattern="[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,}$"
      title="Invalid email"
    />
    <div class="line-box">
      <div class="line"></div>
    </div>
    <div style="height: 15px;"></div>
  </label>
  <label>
    <p class="label-txt"><i class="fa fa-phone w3-large"></i> Phone Number</p>
    <input
      placeholder="05xxxxxxxx"
      name="numbers"
      type="text"
      class="input"
      required="required"
      pattern="[0]{1}[5]{1}[0-9]{8}"
      ,
      title="Invalid number"
    />
    <div class="line-box">
      <div class="line"></div>
    </div>
    <div style="height: 15px;"></div>
  </label>
  <button type="submit" class="btn btn-primary">
    <i class="fa fa-h-square w3-large"></i>
    Add Clinic
  </button>
</div>
