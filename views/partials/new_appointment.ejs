<div
  class="modal fade"
  id="newApp"
  tabindex="-1"
  role="dialog"
  aria-labelledby="newAppLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form action="/doctors/<%= data._id %>/appointments" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="newAppLabel">
            Create New Appointment
          </h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <h3 class="control-label">Appointment Time</h3>
          <input type="date" name="date" />
          <input type="time" name="time" />
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-dark">Create Appointment</button>
        </div>
      </form>
    </div>
  </div>
</div>
