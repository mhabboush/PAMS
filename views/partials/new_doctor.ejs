<div class="row">
  <div class="d-flex align-items-center col-6">
    <label>
      <p class="label-txt">First Name</p>
      <input
        name="fname"
        type="text"
        class="input"
        required="required"
        pattern="[A-Za-z]{1,15}"
        title="Please use only characters"
      />
      <div class="line-box">
        <div class="line"></div>
      </div>
    </label>
  </div>
  <div class="d-flex align-items-center col-6">
    <label>
      <p class="label-txt">Last Name</p>
      <input
        name="lname"
        type="text"
        class="input"
        required="required"
        pattern="^[A-Za-z]{1,15}"
        title="Please use only characters"
      />
      <div class="line-box">
        <div class="line"></div>
      </div>
    </label>
  </div>
</div>
