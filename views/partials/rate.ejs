<button
  type="button"
  class="btn btn-primary"
  data-toggle="modal"
  data-target="#exampleModal"
>
  <i class="fa-check-circle w3-xlarge" style="color: white;"></i>
  Complete Appointment
</button>
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          Rate and Review
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="review-box">
          <label for="review" class="form-control">Write your review:</label>
          <input
            id="review"
            class="form-control"
            placeholder="review"
            name="review"
            style="height: auto; width: 75px;"
          />
        </div>
        <div class="clrate">
          <label for="exampleFormControlSelect1">Rate Clinic</label>
          <select
            class="form-control"
            id="exampleFormControlSelect1"
            name="clinic_rating"
          >
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
        </div>
        <div class="drrate">
          <label for="exampleFormControlSelect2">Rate Doctor</label>
          <select
            class="form-control"
            id="exampleFormControlSelect2"
            name="doctor_rating"
          >
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
        <form action="/appointments/:<%= data._id %>?_method=PUT" method="POST">
          <button type="submit" class="btn btn-outline-dark">
            Submit
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
