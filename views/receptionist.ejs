<%- include('./partials/head.ejs') %>
<div class="wrapper">
  <nav id="sidebar">
    <ul class="list-unstyled components">
      <% if (active == "pending") { %>
      <li class="active">
        <a> <i class="fa fa-calendar"></i> Pending Appointments </a>
      </li>
      <li>
        <a href="/appointments/finished">
          <i class="fa fa-calendar-check"></i> Finished Appointments
        </a>
      </li>
      <% } if (active == "finished") { %>
      <li>
        <a href="/appointments">
          <i class="fa fa-calendar"></i>Pending Appointments</a
        >
      </li>
      <li class="active">
        <a> <i class="fa fa-calendar-check"></i>Finished Appointments</a>
      </li>
      <% } %>
    </ul>
  </nav>
  <div id="content">
    <div class="jumbotron">
      <div class="input-group mb-3">
        <input
          type="text"
          id="searchinp"
          class="form-control"
          aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default"
          placeholder="Search"
        />
      </div>
      <table class="table table-striped">
        <thead class="thead-dark">
          <th scope="col">Doctor</th>
          <th scope="col">Date</th>
          <th scope="col">Time</th>
          <% if (active == "pending") { %>
          <th scope="col">Action</th>
          <% } if (active == "finished") { %>
          <th scope="col">Doctor Rating</th>
          <th scope="col">Clinic Rating</th>
          <% } %>
        </thead>
        <tbody>
          <% if (active == "pending") { data.forEach(d => { %>
          <tr>
            <td>
              <a>
                <%= "Dr."+ d.appDoctor['fname'] + " " + d.appDoctor['lname']</a
              >
            </td>
            <td><a> <%= d.date %> </a></td>
            <td><a> <%= d.time %> </a></td>
            <td>
              <form
                action="/appointments/:<%= d._id %>?_method=PUT"
                method="POST"
              >
                <button type="submit">
                  <i
                    class="fa fa-check-circle w3-xlarge"
                    style="color: green;"
                  ></i>
                </button>
              </form>
              <form
                action="/appointments/:<%= d._id %>?_method=DELETE"
                method="POST"
              >
                <button type="submit">
                  <i
                    class="fa fa-minus-circle w3-xlarge"
                    style="color: red;"
                  ></i>
                </button>
              </form>
            </td>
          </tr>
          <% }) } if (active == "finished") { data.forEach(d => { %>
          <tr>
            <td>
              <a>
                <%= "Dr."+ d.appDoctor['fname'] + " " + d.appDoctor['lname']</a
              >
            </td>
            <td><a> <%= d.date %> </a></td>
            <td><a> <%= d.time %> </a></td>
            <td>
              <a>
                <% if (d.doctor_rating <= 0) { %> There is no rating. <% } %> <%
                if (d.doctor_rating > 0) for(i=0; i < d.doctor_rating; i++) { %>
                <i class="fa fa-star checked w3-xlarge"></i><% } %>
                <span> <%= d.doctor_rating %> </span>
              </a>
            </td>
            <td>
              <a>
                <% if (d.clinic_rating <= 0) { %> There is no rating. <% } %> <%
                if (d.clinic_rating > 0) for(i=0; i < d.clinic_rating; i++) { %>
                <i class="fa fa-star checked w3-xlarge"></i><% } %>
                <span> <%= d.clinic_rating %> </span>
              </a>
            </td>
          </tr>
          <% }) } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%- include('./partials/foot.ejs') %>
