<!-- Header for the page -->
<%- include('./partials/head.ejs') %>
<div class="wrapper">
  <div id="content">
    <div class="jumbotron">
      <!-- Display the Name of Clinic, Doctor or Doctor and Clinic for the appointment-->
      <div class="title">
        <% if (active == "Clinic") { %>
        <h1 class="display-3">
          <i class="fa fa-ambulance w3-xxxlarge"></i> <%= data.name %>
        </h1>
        <% } if (active == "Doctor") { %>
        <h1 class="display-3"><%= "Dr." + data.fname + " " + data.lname %></h1>
        <% } if (active == "Appointment") { %>
        <h1 class="display-3">
          <%= "Dr." + data.appDoctor['fname'] + " " + data.appDoctor['lname'] +
          " at " + data.appClinic['name'] %>
        </h1>
        <!-- Display the rating of Doctor or Clinic -->
        <% } if (active != "Appointment") { if (data.rating <= 0) { %> There is
        no rating yet <% } if (data.rating > 0) { for(i=0; i < data.rating; i++)
        { if (data.rating > i+0.75) %>
        <i class="fa fa-star checked w3-xlarge"></i> <% if (data.rating <=
        i+0.75 && data.rating >= i+0.25) %>
        <i class="fa fa-star-half checked w3-xlarge"></i> <% } %>
        <span> <%= data.rating %> </span>
        <% } } %>
      </div>
      <!-- To show the info -->
      <%- include('./partials/info.ejs') %>
      <div class="container">
        <% if (active == "Clinic") { %>
        <!-- If there are doctors show them -->
        <%- include('./partials/doctor_list.ejs') %>
        <div class="row">
          <% if (user == "manager") { %>
          <div class="col">
            <button class="btn bg-dark btn-block btn-lg">
              <a class="links" href="/clinics/<%= data._id %>/edit">
                Edit Clinic Info
              </a>
            </button>
          </div>
          <div class="col">
            <button class="btn bg-dark btn-block btn-lg">
              <a class="links" href="/clinics/<%= data._id %>/doctors/new">
                Add New Doctor
              </a>
            </button>
          </div>
          <div class="col">
            <button class="btn bg-dark btn-block btn-lg">
              <a class="links" href="/clinics/<%= data._id %>/receptionist/new">
                Add Clinic Receptionist
              </a>
            </button>
          </div>
        </div>
        <% } } if (active == "Doctor") { if (user == "patient") { %>
        <button
          class="btn bg-dark btn-block btn-lg"
          data-toggle="modal"
          data-target="#newApp"
        >
          <a class="links" href="">
            <i class="fa fa-calander w3-xlarge" style="color: white;"></i>
            Create Appointment
          </a>
        </button>
        <% } } if (active == "Appointment") { if (data.status != "Done") { %>
        <button
          type="button"
          class="btn btn-primary"
          data-toggle="modal"
          data-target="#rateApp"
        >
          <i class="fa-check-circle w3-xlarge" style="color: white;"></i>
          Complete Appointment
        </button>
        <% } } %>
      </div>
    </div>
  </div>
</div>
<!-- Adding New Appointment -->
<%- include("./partials/new_appointment.ejs") %>
<!-- For Rating The Appointments -->
<%- include('./partials/rate.ejs') %>
<!-- The Footer -->
<%- include('./partials/foot.ejs') %>
